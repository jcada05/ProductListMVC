@model ProductListMvc.Models.Product

<h1>Product Details</h1>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>
    </dl>
</div>
<div>
    <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a href="/Product" asp-controller="Product" asp-action="Index">Back to List</a>
</div>